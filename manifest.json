{
    "manifest_version": 3,
    "name": "Anti-Doomscroll",
    "version": "1.3",
    "description": "Intention blocker with History and Session Timer.",
    "content_scripts": [
      {
        "matches": [
          "*://*.x.com/*",
          "*://*.twitter.com/*",
          "*://*.linkedin.com/*"
        ],
        "js": ["storage.js", "ui.js", "main.js"],
        "css": ["styles.css"],
        "run_at": "document_start"
      }
    ]
  }